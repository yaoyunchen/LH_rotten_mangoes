<div class="container-fluid">
  <%= form_tag session_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email,
        "",
        class: "form-control",
        placeholder: "Enter email"
      %>
    </div>
    
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password,
        "",
        class: "form-control",
        placeholder: "Enter password"
      %>
    </div>

    <div>
      <%= submit_tag "Log In",
      class: "btn btn-darkgray" %>
    </div>
  <% end %>
</div>
