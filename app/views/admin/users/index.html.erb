<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th> </th>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Join Date</th>
        <th>Spy Mode</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
     </thead>
    <tfoot>
      <tr>
        <td> </td>
        <td>ID</td>
        <td>Name</td>
        <td>Email</td>
        <td>Join Date</td>
        <td>Spy Mode</td>
        <td>Edit</td>
        <td>Delete</td>
      </tr>
     </tfoot>
     <tbody>
      <% @users.each do |user| %>
        <tr>
          <td> </td>
          <td><%= user.id %></td>
          <td><%= user.full_name %></td>
          <td><%= user.email %></td>
          <td><%= formatted_date(user.created_at) %></td>
          <td>
            <%= form_for [:admin, user], method: "login_as_user" do |f| %>
              <button class="btn btn-danger" type="submit">Spy Mode</button>
            <% end %>
          </td>
          <td><%= link_to "edit", edit_admin_user_path(user) %></td>
          <td><%= link_to "delete", admin_user_path(user), :method => :delete, :"data_confirm" => "You sure?"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@users) %>
</div>
<div class="container">
  <%= link_to "Add a new user", 
    new_admin_user_path,
    class: "btn btn-darkgray"
  %>  
</div>

